{% extends 'base.html.twig' %}

    {% block title %}Tunisia Events{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-sm-3 col-xs-12">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">

                        <h2 class="h2">Trouver un Ã©vennement :</h2>
                        {{ form_start(searchForm) }}
                        <button type="submit" name="rechercher" class="btn btn-success">
                            Rechercher <span class="glyphicon glyphicon-search"></span>
                        </button>
                        {{ form_row(searchForm.motcle) }}
                        {{ form_row(searchForm.categories) }}
                    </div>
                    <div class="col-xs-12">
                        {{ form_row(searchForm.lieu) }}
                        {{ form_end(searchForm) }}

                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-9 col-xs-12">
            <div class="container-fluid">
                {% for event in events %}
                    {% include 'event/affiche_events.html.twig' %}
                {% endfor %}
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-sm-push-4">
            {% include 'default/pagination.html.twig' %}
        </div>

    </div>
{% endblock %}
