{% extends 'base.html.twig' %}

{% block title %}
    {{event.nom}}
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-sm-6 col-sm-offset-3 col-xs-12">

            {% if event.photo %}
                <a href="{{ asset('/images/events/'~event.nom~'/'~event.photo) }}">
                    <img src="{{ asset('/images/events/'~event.nom~'/'~event.photo) }}"
                     alt="image non disponible" class="event_show_photo">
                </a>
            {% else %}
                <img src="{{ asset('/images/events/no-img.png') }}" alt="image non disponible" class="event_show_photo">
            {% endif %}
            <h1 class="h1">{{ event.nom }} : </h1>

            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ event.nom }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ event.description }}</td>
                    </tr>
                    <tr>
                        <th>Lieu</th>
                        <td>{{ event.lieu }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ event.date|date("d-m-Y H") }}h</td>
                    </tr>
                    <tr>
                        <th>Date de Publication</th>
                        <td>{{ event.datePublication|date("d-m-Y H:m") }}</td>
                    </tr>
                    {% if not event.ouvertCheck %}
                        <tr>
                            <th>Date d'inscription</th>
                            <td> Du <strong>{{ event.dateDebutInscri|date("d-m-Y H") }}h</strong> jusqu'à <strong>{{ event.datefinInscri|date("d-m-Y H") }}h</strong></td>
                        </tr>
                    {% endif %}
                    {% if event.prix %}
                        <tr>
                            <th>Prix d'inscription</th>
                            <td>{{ event.prix }}</td>
                        </tr>
                    {% endif %}
                    {% if event.categories %}
                        <tr>
                            <th>Categories :</th>
                            <td>
                                {% for item in event.categories %}
                                    <input type="checkbox" name="{{ item.nom }}" value="{{ item.nom }}" disabled="true" checked="true">{{ item.nom }} 
                                {% endfor %}
                            </td>
                        </tr>
                    {% endif %}
                    <tr>
                        <th>Fichiers</th>
                        <td>{% if event.fichiers %}{{ event.fichiers|join(', ') }}{% endif %}</td>
                    </tr>
                    {% if not event.ouvertCheck %}
                        <tr>
                            <td><a href="#" class="btn btn-success">Réserver votre place</a></td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
