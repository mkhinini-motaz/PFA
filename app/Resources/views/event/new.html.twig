{% extends 'base.html.twig' %}

{% block title %}
    Création d'un évennement
{% endblock %}

{% block body %}
    <h1>Création d'un nouveau évennement</h1>

    Votre évennement est : </br>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Créer" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
    </ul>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        var fields = $("#appbundle_event_dateDebutInscri, #appbundle_event_dateFinInscri");
        var field = $("#appbundle_event_prix");

        {% if form.ouvertCheck.vars.checked %}
            fields.hide();
            fields.prev().hide();
        {% endif %}

        {% if form.gratuitCheck.vars.checked %}
            field.hide();
            field.prev().hide();
        {% endif %}

        $("#appbundle_event_ouvertCheck").click(function(){
            if($(this).is(":checked")){
                fields.hide();
                fields.prev().hide();
            }else{
                fields.show();
                fields.prev().show();
            }
        });

        $("#appbundle_event_gratuitCheck").click(function(){
            if($(this).is(":checked")){
                field.hide();
                field.prev().hide();
            }else{
                field.show();
                field.prev().show();
            }
        });
    </script>

{% endblock %}
